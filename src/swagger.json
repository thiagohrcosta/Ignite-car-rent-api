{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "RentalX is a car rental company that allows users to rent cars for a period of time.",
    "version": "1.0.0",
    "constact": {
      "name": "RentalX",
      "url": "contact@rentalx.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Categories"
        ],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category name sample",
                  "description": "Category sample description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created successfully"
          }, 
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": [
          "Categories"
        ],
        "summary": "List all categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Categories listed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}